<?xml version="1.0"?>
<Problem name="OMPL_RRTStar_quadrotor">
	<Robot robot="robots/quadrotor.urdf" scale="0.01">
		<Limits name="X" min="0.0" max="100.0" />
		<Limits name="Y" min="0.0" max="100.0" />
		<Limits name="Z" min="0.0" max="100.0" />
		<Home TH="0.0" WZ="1.0" WY="0.0" WX="0.0" Z="0.0" Y="0.0" X="0.0" />
	</Robot>

	<Obstacle obstacle="obstacles/unitsphere.iv" scale="5.0">
		<Home TH="0.0" WZ="1.0" WY="0.0" WX="0.0" Z="50.0" Y="15.0" X="70.0" />
		<Potential repulse="1.0" diffusion="0.1"/>
	</Obstacle>
	<Obstacle obstacle="obstacles/unitsphere.iv" scale="10.0">
		<Home TH="0.0" WZ="1.0" WY="0.0" WX="0.0" Z="50.0" Y="50.0" X="50.0" />
		<Potential repulse="1.2" diffusion="0.11"/>
	</Obstacle>
	<Obstacle obstacle="obstacles/transparentwalls.iv" scale="100.0">
		<Home TH="0.0" WZ="1.0" WY="0.0" WX="0.0" Z="50.0" Y="0.0" X="0.0" />
	</Obstacle>


	<Controls robot="controls/quadrotor_R3.cntr" />
	<Planner>
		<Parameters>
			<Name>omplRRTStar</Name>
			<Parameter name="Optimize none(0)/dist(1)/clear(2)/PMD(3)">2</Parameter>
			<Parameter name="Max Planning Time">2.0</Parameter>
			<Parameter name="Speed Factor">1</Parameter>
			<Parameter name="Range">2.0</Parameter>
			<Parameter name="DelayCC (0/1)">0</Parameter>
			<Parameter name="Simplify Solution">1</Parameter>
		</Parameters>
		<Queries>
			<Query>
				<Init dim="3">0.2 0.2 0.2</Init>
				<Goal dim="3">0.8 0.8 0.8</Goal>
			</Query>
		</Queries>
	</Planner>
</Problem>
